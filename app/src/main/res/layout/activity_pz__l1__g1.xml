                android:layout_height="wrap_content"
                android:alpha=".3"
                app:srcCompat="@drawable/pz_l1_triangle_back"
                android:id="@+id/pz_l1_triangle_back_imgView" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
