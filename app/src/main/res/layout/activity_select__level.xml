<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select__level"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/select_ctg"
    tools:context="info.atiar.pnotca.Select_Level">

    <TextView
        android:text="Select Level"
        android:gravity="center"
        android:textSize="70sp"
        android:textStyle="bold"
        android:layout_marginLeft="330dp"
        android:textColor="#9c0000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/back_button111"
        android:id="@+id/imageButton8"
        android:background="@null"
        android:onClick="backButton"
        android:layout_marginTop="135dp"
        android:layout_marginLeft="40dp" />

    <TextView
        android:text="Simple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="130dp"
        android:textSize="40sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/textView11" />

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/p_apple_a"
        android:id="@+id/imageButton14"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="280dp"
        android:onClick="simpleLevel"
        android:background="@null" />

    <TextView
        android:text="Median"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="440dp"
        android:textSize="40sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/textView12" />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="390dp"
        app:srcCompat="@drawable/p_apple_a"
        android:id="@+id/imageView2" />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="500dp"
        app:srcCompat="@drawable/p_apple_a"
        android:id="@+id/imageView" />

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:srcCompat="@drawable/l11_trans"
        android:layout_marginTop="275dp"
        android:layout_marginLeft="420dp"
        android:id="@+id/imageButton13"
        android:background="@null"
        android:onClick="medianLevel"/>

    <TextView
        android:text="Advanced"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="710dp"
        android:textSize="35sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/textView13" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="720dp"
        app:srcCompat="@drawable/p_apple_a"
        android:id="@+id/imageView3" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="820dp"
        app:srcCompat="@drawable/p_apple_a"
        android:id="@+id/imageView4" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="265dp"
        android:layout_marginLeft="770dp"
        app:srcCompat="@drawable/p_apple_a"
        android:id="@+id/imageView5" />

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:srcCompat="@drawable/l11_trans"
        android:layout_marginTop="255dp"
        android:layout_marginLeft="730dp"
        android:id="@+id/imageButton15"
        android:background="@null"
        android:onClick="advancedLevel"/>

</RelativeLayout>
